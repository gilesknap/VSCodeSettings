// Place your key bindings in this file to override the defaultsauto[]
[
    // navigate terminals -
    // vscode defaults are already:-
    //      ctrl shift `   creates new terminal (queries for folder)
    //      ctrl `         goes to most recent terminal or creates 1st terminal
    //      ctrl `         while in terminal closes the panel
    // alt arrows are supposed to ove between panes but dont work due to gnome bindings (?)
    // so switch to using ctrl arrows
    {
        "key": "ctrl+down",
        "command": "workbench.action.terminal.focusNext",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+right",
        "command": "workbench.action.terminal.focusNextPane",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+up",
        "command": "workbench.action.terminal.focusPrevious",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+left",
        "command": "workbench.action.terminal.focusPreviousPane",
        "when": "terminalFocus"
    },
    // Terminals: rename and jump to named terminal
    {
        "key": "alt+meta+t",
        "command": "workbench.action.quickOpenTerm"
    },
    {
        "key": "alt+meta+r",
        "command": "workbench.action.terminal.rename"
    },
    // keyboard navigate to any panel
    {
        "key": "ctrl+l ctrl+p",
        "command": "workbench.action.quickOpenView"
    },
    // navigation between panes of the IDE
    {
        "key": "ctrl+meta+up",
        "command": "workbench.action.navigateUp",
    },
    {
        "key": "ctrl+meta+down",
        "command": "workbench.action.navigateDown",
    },
    {
        "key": "ctrl+meta+left",
        "command": "workbench.action.navigateLeft",
    },
    {
        "key": "ctrl+meta+right",
        "command": "workbench.action.navigateRight",
    },
    // back and forward
    {
        // ctrl meta <
        "key": "ctrl+meta+,",
        "command": "workbench.action.navigateBack"
    },
    {
        // ctrl meta >
        "key": "ctrl+meta+.",
        "command": "workbench.action.navigateForward"
    },
    // zoom one editor panel
    {
        "key": "ctrl+[",
        "command": "editor.action.fontZoomOut"
    },
    {
        "key": "ctrl+]",
        "command": "editor.action.fontZoomIn"
    },
    // global layout
    {
        "key": "ctrl+shift+3",
        "command": "workbench.action.editorLayoutThreeColumns"
    },
    {
        "key": "ctrl+shift+2",
        "command": "workbench.action.editorLayoutTwoColumns"
    },
    {
        "key": "shift+alt+s",
        "command": "workbench.action.files.saveAll"
    },
    // launch tasks
    {
        "key": "ctrl+l l",
        "command": "workbench.action.tasks.runTask",
        "args": "flake8 whole project"
    },
    {
        "key": "ctrl+l ctrl+b",
        "command": "workbench.action.tasks.runTask",
        "args": "CMake arc-detector data"
    },
    // use F7 to go to next change in gitlens and editor and diff viewer
    {
        "key": "f7",
        "command": "-editor.action.diffReview.next",
        "when": "isInDiffEditor"
    },
    {
        "key": "shift+f7",
        "command": "-editor.action.diffReview.prev",
        "when": "isInDiffEditor"
    },
    {
        "key": "f7",
        "command": "workbench.action.editor.nextChange",
        "when": "editorTextFocus"
    },
    {
        "key": "shift+f7",
        "command": "workbench.action.editor.previousChange",
        "when": "editorTextFocus"
    },
    {
        "key": "f7",
        "command": "workbench.action.compareEditor.nextChange",
        "when": "textCompareEditorVisible"
    },
    {
        "key": "shift+f7",
        "command": "workbench.action.compareEditor.previousChange",
        "when": "textCompareEditorVisible"
    },
    // line operations
    {
        "key": "ctrl+alt+j",
        "command": "editor.action.joinLines"
    },
    {
        "key": "ctrl+l ctrl+l",
        "command": "expandLineSelection",
        "when": "textInputFocus"
    },
    // cmake (override use of F7 which I use for next change)
    {
        "key": "ctrl+l b",
        "command": "cmake.build"
    },
    {
        "key": "f7",
        "command": "-cmake.build"
    },
    {
        "key": "ctrl+l ctrl+shift+b",
        "command": "cmake.buildWithTarget"
    },
    {
        "key": "shift+f7",
        "command": "-cmake.buildWithTarget"
    },
    // jump to specific panes
    {
        "key": "ctrl+e e",
        "command": "workbench.files.action.focusOpenEditorsView",
        "when": "workbench.explorer.openEditorsView.active"
    },
    {
        "key": "ctrl+k e",
        "command": "-workbench.files.action.focusOpenEditorsView",
        "when": "workbench.explorer.openEditorsView.active"
    },
    {
        "key": "ctrl+e f",
        "command": "workbench.explorer.fileView.focus"
    },
    {
        "key": "ctrl+e l",
        "command": "treeLocalHistory.focus"
    },
    {
        "key": "ctrl+e o",
        "command": "outline.focus"
    },
    {
        "key": "ctrl+e p",
        "command": "workbench.action.problems.focus"
    },
    {
        "key": "ctrl+e g",
        "command": "workbench.view.scm"
    },
    {
        "key": "ctrl+shift+g",
        "command": "-workbench.view.scm"
    }
    // UNCOMMENTED
]